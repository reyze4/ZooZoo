<Page x:Class="ZooZoo.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZooZoo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <StackPanel>
            <Button Background="White" x:Name="BZooCompany"
                        Content="ZooCompany"
                        Width="160"
                        BorderBrush="Black"
                        Margin="10 10 10 0"
                        Click="BZooCompany_Click"/>
            <Button Background="White" x:Name="BAnimal"
                        Content="AnimalList"
                        Width="160"
                        BorderBrush="Black"
                        Margin="40 10 40 0"
                        Click="BAnimal_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
